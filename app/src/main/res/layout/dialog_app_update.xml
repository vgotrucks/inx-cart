<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/text_view_message_title_upd_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE ALERT"
        android:fontFamily="@font/open_sans"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_view_message_upd_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have updated your app. Please click on restart to install updates."
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <Button
        android:id="@+id/ask_me_btn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_blue"
        android:text="RESTART"
        android:fontFamily="@font/open_sans"
        android:elevation="3dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

</LinearLayout>
