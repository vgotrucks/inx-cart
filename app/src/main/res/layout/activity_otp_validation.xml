<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvEnterYourPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="6 - Digit OTP"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/showPhoneId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="you have received verification code\nvia SMS at ****0542"
        android:textSize="15sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/tvEnterYourPhone"
        app:layout_constraintTop_toBottomOf="@+id/tvEnterYourPhone"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/ecode1Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="phone"
        android:maxLength="1"
        android:singleLine="true"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvEnterYourPhone"
        app:layout_constraintTop_toBottomOf="@+id/tvEnterYourPhone"
        app:layout_constraintVertical_bias="0.178" />

    <EditText
        android:id="@+id/ecode2Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:ems="2"
        android:inputType="phone"
        android:singleLine="true"
        android:gravity="center"
        android:maxLength="1"
        app:layout_constraintBottom_toBottomOf="@+id/ecode1Id"
        app:layout_constraintStart_toEndOf="@+id/ecode1Id"
        app:layout_constraintTop_toTopOf="@+id/ecode1Id" />

    <EditText
        android:id="@+id/ecode3Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:ems="2"
        android:inputType="phone"
        android:maxLength="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/ecode2Id"
        app:layout_constraintStart_toEndOf="@+id/ecode2Id"
        app:layout_constraintTop_toTopOf="@+id/ecode2Id"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/ecode4Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:ems="2"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/ecode3Id"
        app:layout_constraintStart_toEndOf="@+id/ecode3Id"
        app:layout_constraintTop_toTopOf="@+id/ecode3Id" />
    <EditText
        android:id="@+id/ecode5Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:ems="2"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/ecode4Id"
        app:layout_constraintStart_toEndOf="@+id/ecode4Id"
        app:layout_constraintTop_toTopOf="@+id/ecode4Id" />
    <EditText
        android:id="@+id/ecode6Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:ems="2"
        android:inputType="phone"
        android:maxLength="1"
        android:singleLine="true"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/ecode5Id"
        app:layout_constraintStart_toEndOf="@+id/ecode5Id"
        app:layout_constraintTop_toTopOf="@+id/ecode5Id" />
    <TextView
        android:id="@+id/errorStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/redColor"
        android:layout_margin="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/clickId"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Opps ! invalid OTP"
        android:gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/timeOtp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:fontFamily="@font/open_sans_light"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/resendbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/resendbutton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/tvresend"
        android:textAllCaps="false"
        android:textColor="@color/sucessColor"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/clickId"
        app:layout_constraintTop_toBottomOf="@+id/ecode3Id" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verifybutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_next_button"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/tvverify"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/clickId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="@string/tvclick"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/resendbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resendbutton"
        app:layout_constraintVertical_bias="0.48" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_speed="1"
        app:lottie_colorFilter="@color/defaultButtonColor"
        app:lottie_fileName="progress.json"
        app:lottie_loop="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickId"
        app:layout_constraintVertical_bias="0.411"
        />


</androidx.constraintlayout.widget.ConstraintLayout>