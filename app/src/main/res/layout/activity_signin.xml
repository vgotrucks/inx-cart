<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearlayout9"
       >

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/logo_center"/>
        <ImageView
            android:id="@+id/image_poster1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/poster1" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout9"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/textviewcontinuewith"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Continue with"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/dimen_15sp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:background="@drawable/box_line_at_bottom"
         />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SignInWithPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="Sign in with Phone"
            android:textSize="15sp"
            android:paddingEnd="33dp"
            android:drawableStart="@drawable/ic_phone_24"
            android:paddingStart="@dimen/dimen_10dp"
            android:background="@drawable/bttn_layout"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SignInButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Sign in with Google"
            android:textSize="15sp"
            android:paddingEnd="33dp"
            android:drawableStart="@drawable/google_img"
            android:paddingStart="@dimen/dimen_10dp"
            android:background="@drawable/bttn_layout"
            />
    </LinearLayout>

</RelativeLayout>