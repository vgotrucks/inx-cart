<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navbarColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:elevation="1dp">

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/transparent"
            app:tint="@color/white"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:text="Profile"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_defaultprofile_pic"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/search_view_container"
        android:layout_marginTop="@dimen/dimen_50dp"
        />

    <TextView
        android:id="@+id/mobile_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:text="Mobile Number"
        android:fontFamily="@font/open_sans"
        android:textSize="18sp"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_below="@+id/profile_img"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/mobile_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@drawable/box_line_round_corners"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="+91-"
        android:paddingStart="@dimen/dimen_8dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/mobile_tv"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Outlet Address"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/address_tv"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_with_4dp_radius_default_color"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Buildo Mart, Near FCI godown, Sheopur, Madhya Pradesh, 476337"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</RelativeLayout>