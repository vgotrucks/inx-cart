<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_thumbsup"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_speed="1.5"
        app:lottie_fileName="thumbsup.json"
        app:lottie_loop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/animation_view_successful"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_successful"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_speed="1.5"
        app:lottie_fileName="delivery_success.json"
        app:lottie_loop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_successful_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Successfully Ordered"
        android:fontFamily="@font/open_sans"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:layout_below="@id/animation_view_successful"
        android:textColor="@color/systemGreenColor"/>

    <Button
        android:id="@+id/back_button_successful_delivery"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_button_green"
        android:text="@string/back_to_home"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans"
        android:elevation="@dimen/dimen_10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy to serve you again.\nWe need your feedback to enhance\nyour experience"
        android:layout_below="@id/tv_successful_delivery"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30dp"/>




</RelativeLayout>